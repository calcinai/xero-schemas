//    'manual-journals',
//    'organisation',
//    'overpayments',
//    'payments',
//    'prepayments',
//    'purchase-orders',
//    'quotes',
//    'receipts',
//    'repeating-invoices',
//    //'reports', - this is in a way different format
//    'tax-rates',
//    'tracking-categories',
//    'users'
//]);

//print_r($accounting_api);
