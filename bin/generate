//$payroll_api_us = new API('Payroll - US', 'PayrollUS');
//$scraper->scrapeEnums($payroll_api_us, 'payroll-api-us/types-codes');
//$scraper->scrapeModels($payroll_api_us, 'payroll-api-us', [
